<Shell
    x:Class="ParkingGPT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParkingGPT"
    xmlns:views="clr-namespace:ParkingGPT.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ParkingGPT">

    <TabBar>
        
        <TabBar.Style>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor"
            Value="#f85b5e" />
                <Setter Property="Shell.TabBarTitleColor"
            Value="#022c47" />
                <Setter Property="Shell.TabBarUnselectedColor"
            Value="AntiqueWhite" />
            </Style>
        </TabBar.Style>
        <Tab Title="Home" Icon="home.svg"
 >
            <ShellContent Icon="home.svg" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings.svg"
        >
            <ShellContent Icon="settings.svg" ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>


